<!-- Greeting display-box -->

<div class='grey lighten-2'>
<div class='row'>

  <div class='col s6'>
    <img class='img-circle' src='images/workspace6.jpg'> 
  </div>

  <div class='greeting'>
    <div class='col s6'>
        <div class='greeting-text'>
            <h2 class='black-text'>Hello and Welcome!</h2>
            <h5 class='black-text'>Tired of work leaving you feeling like no more than another brick in the wall?</h5>
            <p>Brickfield Canvas offers work desks, offices and meeting rooms in a variety of options available for those looking for new and different location to work at, We offer a fun twist on work with modern styling and innovative ideas, Brickfield Canvas will also host cafe's to fuel people's work efforts!</p>
        </div>
    </div>
  </div>

</div>  
</div>

  <div>
    <img class='img' src='images/new/sunset.png'/>
  </div>

<!-- Blog -->

  <div class="container">
      <h2 class='header center black-text text-lighten-10'>Our Blog</h2>
  </div>

    {{#each blog}}
      <a style='color: black' href='view/blog/{{id}}'>

         <div class='blog-display-cards'>
            <div class='col s12 m4'>
                <div class='card grey'>
                    <div class='card-content'>    
                        <span class='card-title'>{{title}}</span>
                        <p>{{description}}</p>
                        <img class='blog-display-img' src="{{img}}"/>
                    </div>
                </div>
            </div>
        </div>
      </a>
    {{/each}}

<!-- Events --> 

  <div class="container">
      
      <h2 class='header center black-text text-lighten-10'>Events Information</h2>

      <div class='center black-text'>
        <p>Click an event to view it's details</p>
      </div>

  </div>

  <div class='row'>
   {{#each events}}  
    
    <div class='col s4'> 
        <a style='color: black' href='/view/events/{{id}}'>
            <div class='event-dispay-cards'>
                <div class='col s12'>
                    <div class='card grey darken-1'>
                        <div class='card-content'>
                            <span class='card-title black-text'>{{title}}</span>
                            <p class='black-text'>{{description}}</p>
                            <span>{{location}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

   {{/each}}
</div>