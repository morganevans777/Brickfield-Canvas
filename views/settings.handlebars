  <p>Click on the item you wish to edit and you'll be taken to that items edit page.</p>
  
  <h1 class='black-text lighten-1'>Events</h1>

<div class='row'>
   {{#each events}}  
    
    <div class='col s4'> 
        <a style='color: black' href='/edit/events/{{id}}'>
            <div class='event-dispay-cards'>
                <div class='col s12'>
                    <div class='card grey darken-1'>
                        <div class='card-content'>
                            <span class='card-title black-text'>{{title}}</span>
                            <p class='black-text'>{{description}}</p>
                            <span>{{location}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

   {{/each}}
</div>

   <a class='buttons curve white black-text btn' href='/add/events'>Add Event<i class='material-icons left'>add_circle_outline</i></a>

    <h1 class='black-text lighten-1'>Blog Space</h1>

   {{#each blog}}
   <a style='color: black' href='/edit/blog/{{id}}' >
        <div class='blog-display-cards'>
            <div class='col s12 m4'>
                <div class='card grey darken-1'>
                    <div class='card-content'>    
                        <span class='card-title black-text'>{{title}}</span>
                        <p class='black-text'>{{description}}</p>
                        <img class='blog-display-img' src="{{img}}"/>
                    </div>
                </div>
            </div>
        </div>
   </a>
   {{/each}}

<a class='buttons curve btn white black-text' href='/add/blog'>Add Blog<i class='material-icons left'>add_circle_outline</i></a>

